<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMEGP_Physical_V.BankPhysicalVerificationPage"
             Title="Bank Physical Verification"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="0">

        <!-- Header -->
        <Grid x:Name="HeaderGrid" 
              BackgroundColor="#FF6B35" 
              Padding="15,10" 
              RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Text="â†"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    WidthRequest="35"
                    HeightRequest="35"
                    Padding="0"
                    Clicked="OnBackButtonClicked"
                    Grid.Column="0"/>

            <Label x:Name="HeaderTitle"
                   Text="Bank Physical Verification"
                   TextColor="White"
                   FontSize="16"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Margin="10,0,0,0"
                   Grid.Column="1"/>
        </Grid>

        <!-- Step Navigation -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               Padding="0" 
               Margin="0" 
               CornerRadius="0" 
               HasShadow="False">
            <ScrollView x:Name="StepScrollView" 
                       Orientation="Horizontal" 
                       HorizontalScrollBarVisibility="Never"
                       Padding="10,15">
                <HorizontalStackLayout x:Name="StepsContainer" 
                                      Spacing="0"/>
            </ScrollView>
        </Frame>

        <!-- Content Area -->
        <ScrollView Grid.Row="2" 
                   Padding="15,10">
            <StackLayout x:Name="ContentContainer" 
                        Spacing="0"/>
        </ScrollView>

    </Grid>
</ContentPage>