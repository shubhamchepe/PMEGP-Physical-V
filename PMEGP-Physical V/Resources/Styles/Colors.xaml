<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Original MAUI Colors -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Unit Verification Page Colors -->
    <Color x:Key="HeaderGradientStart">#0B6B3F</Color>
    <Color x:Key="HeaderGradientEnd">#66C27A</Color>
    <Color x:Key="MintHeaderBackground">#DCEEE6</Color>
    <Color x:Key="MintHeaderText">#0B6B3F</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="FieldBackground">#F0F2F4</Color>
    <Color x:Key="FieldBorder">#C7C7C7</Color>
    <Color x:Key="FieldLabel">#8B8B8B</Color>
    <Color x:Key="FieldText">#4D4D4D</Color>
    <Color x:Key="AccentOrange">#FF7A00</Color>
    <Color x:Key="ButtonGreen">#0E6A3A</Color>
    <Color x:Key="RadioSelected">#27C24A</Color>

    <!-- Original MAUI Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Unit Verification Dimension Resources -->
    <x:Double x:Key="HeaderHeight">110</x:Double>
    <x:Double x:Key="CardCornerRadius">18</x:Double>
    <x:Double x:Key="FieldCornerRadius">10</x:Double>
    <x:Double x:Key="FieldHeight">68</x:Double>
    <x:Double x:Key="PageMargin">18</x:Double>
    <x:Double x:Key="CardPadding">20</x:Double>
    <x:Double x:Key="HeaderFontSize">28</x:Double>
    <x:Double x:Key="SectionHeaderFontSize">18</x:Double>
    <x:Double x:Key="FieldLabelFontSize">14</x:Double>
    <x:Double x:Key="FieldValueFontSize">16</x:Double>

    <!-- Unit Verification Styles -->
    <Style x:Key="MenuItemStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="25" />
    </Style>

    <Style x:Key="FieldContainerStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource FieldBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource FieldBorder}" />
        <Setter Property="CornerRadius" Value="{StaticResource FieldCornerRadius}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="HeightRequest" Value="{StaticResource FieldHeight}" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonGreen}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Margin" Value="8,0" />
    </Style>
</ResourceDictionary>